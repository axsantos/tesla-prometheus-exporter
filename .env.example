# =============================================================================
# Tesla Prometheus Exporter - Configuration
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# --- Tesla API Credentials (Required) ---
# Register at https://developer.tesla.com to get these
TESLA_CLIENT_ID=your_client_id_here
TESLA_CLIENT_SECRET=your_client_secret_here

# --- Tesla OAuth Settings ---
# Must match the redirect URI registered in your Tesla developer app
TESLA_REDIRECT_URI=https://localhost/callback

# Regional Fleet API endpoint:
#   North America: https://fleet-api.prd.na.vn.cloud.tesla.com
#   Europe:        https://fleet-api.prd.eu.vn.cloud.tesla.com
#   China:         https://fleet-api.prd.cn.vn.cloud.tesla.com
TESLA_API_BASE=https://fleet-api.prd.na.vn.cloud.tesla.com

# Auth endpoints (usually no need to change)
TESLA_AUTH_BASE=https://auth.tesla.com
TESLA_TOKEN_BASE=https://fleet-auth.prd.vn.cloud.tesla.com

# OAuth scopes
TESLA_SCOPES=openid offline_access vehicle_device_data vehicle_location

# --- Vehicle Selection ---
# Index of the vehicle to monitor (0 = first vehicle)
TESLA_VEHICLE_INDEX=0

# --- Polling Settings ---
# How often to poll when vehicle is online (seconds)
POLL_INTERVAL_SECONDS=300

# How often to check state when vehicle is asleep (seconds)
SLEEP_POLL_INTERVAL_SECONDS=660

# Wake the car to poll data? (true/false)
# WARNING: Setting this to true prevents the car from sleeping and uses more battery
WAKE_ON_POLL=false

# --- Exporter Settings ---
EXPORTER_PORT=9090
TOKEN_FILE_PATH=/data/tokens/token.json
LOG_LEVEL=INFO

# --- Grafana ---
GF_SECURITY_ADMIN_PASSWORD=admin
